{
  "prefix": "/opt/gnupg",
  "common_params": [
    "--prefix=#{prefix}"
  ],
  "packages": {
    "gmp": {
      "params": [
        "--enable-fat"
      ]
    },
    "nettle": {
      "params": [
        "--with-lib-path=#{prefix}/lib",
        "--with-include-path=#{prefix}/include"
      ]
    },
    "gnutls": {
      "env": [
        "PKG_CONFIG_PATH=#{prefix}/lib/pkgconfig",
        "GMP_CFLAGS=-I#{prefix}/include",
        "GMP_LIBS=-L#{prefix}/lib",
        "LDFLAGS=-L#{prefix}/lib -Wl,-R#{prefix}/lib"
      ],
      "params": [
        "--disable-nls",
        "--with-included-libtasn1",
        "--with-included-unistring",
        "--without-p11-kit"
      ],
      "os-deps": {
        "debian-family": [
          "libopts25",
          "libunbound2"
        ]
      }
    },
    "npth": {
      "params": [
        "--enable-static"
      ]
    },
    "libgpg-error": {
      "params": [
        "--enable-static",
        "--with-libgpg-error-prefix=#{prefix}"
      ]
    },
    "libksba": {
      "env": [
        "LDFLAGS=-L#{prefix}/lib -Wl,-R#{prefix}/lib"
      ],
      "params": [
        "--enable-static",
        "--with-libgpg-error-prefix=#{prefix}"
      ]
    },
    "libgcrypt": {
      "params": [
        "--enable-static",
        "--with-libgpg-error-prefix=#{prefix}"
      ]
    },
    "libassuan": {
      "env": [
        "LDFLAGS=-L#{prefix}/lib -Wl,-R#{prefix}/lib"
      ],
      "params": [
        "--enable-static",
        "--with-libgpg-error-prefix=#{prefix}"
      ]
    },
    "pinentry": {
      "env": [
        "LDFLAGS=-L#{prefix}/lib -Wl,-R#{prefix}/lib"
      ],
      "params": [
        "--enable-static",
        "--with-libgpg-error-prefix=#{prefix}",
        "--with-libassuan-prefix=#{prefix}",
        "--enable-pinentry-curses",
        "--enable-pinentry-tty",
        "--enable-libsecret"
      ],
      "os-deps": {
        "debian-family": [
          "libsecret-1-0"
        ]
      },
      "fixups": [
        "ln -nsfv pinentry-curses #{temp_tree}#{prefix}/bin/pinentry"
      ],
      "comments": [
        "pinentry defaults to symlink to pinentry-gtk-2; we already configure gnupg to default to -curses",
        "libsecret got pulled in as dep on some OSes anyway. Makes enough sense to force it on."
      ]
    },
    "gnupg22": {
      "env": [
        "PKG_CONFIG_PATH=#{prefix}/lib/pkgconfig",
        "LDFLAGS=-L#{prefix}/lib -Wl,-R#{prefix}/lib"
      ],
      "params": [
        "--disable-nls",
        "--disable-ldap",
        "--enable-noexecstack",
        "--enable-key-cache=16384",
        "--enable-wks-tools",
        "--with-pinentry-pgm=#{prefix}/bin/pinentry-curses",
        "--with-libgpg-error-prefix=#{prefix}",
        "--with-libassuan-prefix=#{prefix}",
        "--with-libgcrypt-prefix=#{prefix}",
        "--with-ksba-prefix=#{prefix}",
        "--with-npth-prefix=#{prefix}"
      ],
      "fixups": [
        "for F in #{temp_tree}#{prefix}/bin/*; do ln -sv \"$(basename \"$F\")\" \"${F}2.2\"; done",
        "ln -sv gpg #{temp_tree}#{prefix}/bin/gpg2"
      ]
    }
  }
}
